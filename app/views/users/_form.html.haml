.row
  .large-6.columns
    %fieldset
      %legend
      = form_for @user, :url => users_path, :remote => true do |f|
        = f.label :email
        = f.text_field :email, :autofocus => true
        = f.label :name
        = f.text_field :name
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius')
        = f.submit "Create Account", :class => 'button tiny radius'
  .large-6.columns