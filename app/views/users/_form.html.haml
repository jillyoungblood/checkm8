.row
  .large-6.columns
    = form_for @user, :url => users_path, :remote => true do |f|
      = f.label :email, :class => 'form_text'
      = f.text_field :email, :autofocus => true
      = f.label :name, :class => 'form_text'
      = f.text_field :name
      = f.label :password, :class => 'form_text'
      = f.password_field :password
      = f.label :password_confirmation, :class => 'form_text'
      = f.password_field :password_confirmation
      = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius')
      = f.submit "Create Account", :class => 'button tiny radius'
  .large-6.columns